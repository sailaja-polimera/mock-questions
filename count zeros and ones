#include <stdio.h>
int zeros_ones(int arr[8],int n)
{
int r,count=0,count1=0;
   while(n)
   {
   for(int i=0;i<4;i++)
   {
       r=n%2;
       arr[i]=r;
       n=n/2;
   }
   }

    for(int i=3;i>=0;i--)
   {
       printf("%d",arr[i]);
   }
   printf("\n");
    for(int i=3;i>=0;i--)
   {
   if(arr[i]==1)
       count++;
   else
   count1 ++;
   }

   printf("no of 1's are :%d\n",count);
     printf("no of 0's are :%d",count1);
}
int main()
{
   int arr[8],n;
   printf("Enter the number:");
   scanf("%d",&n);
   int (*fptr)(int[],int)=zeros_ones;
   fptr(arr,n);
  
}
